        "/api/usuarios/mostrarUnUsuario/{id}": {
            "get": {
                "tags": [
                    "Usuarios"
                ],
                "summary": "Muestra los detalles de un único usuario.",
                "description": "<p>Servicio que devuelve los datos de la cuenta de usuario indicada por el identificador ingresado.</p>",
