        "/api/usuarios/crearUsuario": {
            "post": {
                "tags": [
                    "Usuarios"
                ],
                "summary": "Creación de una cuenta nueva de usuario.",
                "description": "<p>Servicio que crea una nueva cuenta destinada a un usuario de GameVerse, solo si el correo ingresado no ha sido usado anteriormente</p>",
                "operationId": "create",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Usuario",
                        "in": "body",
                        "description": "Cuenta de usuario a crear",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/NuevoUsuario"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario creado con éxito"
                    },
                    "403": {
                        "description": "Prohibido"
                    },
                    "404": {
                        "description": "El correo ingresado ya ha sido registrado anteriormente"
                    }
                }
            }
        },
